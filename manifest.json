{
  "manifest_version": 2,
  "name": "Patreon Audio Downloader",
  "version": "1.0",
  "description": "Download audio files from patreon.com",
  "background": {
    "scripts": ["background-script.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.patreon.com/*"],
      "js": ["content-scripts/download-button.js"]
    }
  ],
  "permissions": ["downloads"]
}
